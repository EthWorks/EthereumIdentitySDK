{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node"
  },
  "exclude": [
    "**/build",
    "**/dist",
    "@universal-login/commons/src**",
    "@universal-login/relayer/src**",
    "@universal-login/sdk/src**",
    "@universal-login/react/src**",
    "@universal-login/ops/src**"
  ]
}
