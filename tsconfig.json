{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "lib": [
      "esnext"
    ],
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/build",
    "**/dist"
  ]
}
