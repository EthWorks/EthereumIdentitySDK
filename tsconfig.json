{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "**/build",
    "**/dist",
    "@universal-login/commons/lib**",
    "@universal-login/relayer/lib**",
    "@universal-login/sdk/lib**",
    "@universal-login/react/src**",
    "@universal-login/ops/src**"
  ]
}
