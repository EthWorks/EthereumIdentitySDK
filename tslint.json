{
  "$schema": "http://json.schemastore.org/tslint",
  "jsRules": true,
  "rules": {
    "arrow-parens": true,
    "arrow-return-shorthand": true,
    "class-name": true,
    "comment-format": [
      true,
      "check-space"
    ],
    "curly": true,
    "import-spacing": true,
    "no-console": false,
    "no-construct": true,
    "no-duplicate-imports": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-eval": true,
    "no-irregular-whitespace": true,
    "no-parameter-reassignment": true,
    "no-return-await": true,
    "no-trailing-whitespace": true,
    "no-var-keyword": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-shorthand": true,
    "one-variable-per-declaration": true,
    "prefer-const": true,
    "prefer-object-spread": true,
    "prefer-template": true,
    "quotemark": [
      true,
      "single"
    ],
    "radix": true,
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "asyncArrow": "always",
        "named": "never"
      }
    ],
    "space-within-parens": true,
    "triple-equals": true,
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-type-operator"
    ]
  }
}